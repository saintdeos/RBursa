<div style="margin: 15px">
  <h2>Новая Петиция</h2>
</div>

<%= form_for @petitions do |f| %>
  <% if @petitions.errors.any? %>

    <div>
      <h2>Form is invalid</h2>
      <ul>
        <% @petitions.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

  <% end %>

  <div style="margin: 15px">
    <div class="form-group" style="width: 40%">
      <%= f.label :title, 'Название' %><br />
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group" style="width: 40%">
      <%= f.label :text, 'Описание' %><br />
      <%= f.text_area :text, class: 'form-control', rows: '6' %>
    </div>
    <div class="actions"><%= submit_tag "Обновить", class: 'btn btn-default' %></div>
  </div>

<% end %>
